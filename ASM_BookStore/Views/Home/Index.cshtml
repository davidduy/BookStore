                                            <p>Accessories</p>
                                            <h4 class="card-product__title"><a href="single-product.html">@b.book_title </a></h4>
                                            <p class="card-product__price">@b.book_price VND</p>
                                        </div>
                                    </div>
                                </div>
                                count++;
                            }
