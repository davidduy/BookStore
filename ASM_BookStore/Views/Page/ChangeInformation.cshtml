@{
    Layout = null;
}
@model ASM_BookStore.Models.Customer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Aroma Shop - Login</title>
    <link rel="icon" href="~/img/Fevicon.png" type="image/png">
    <link rel="stylesheet" href="~/vendors/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/vendors/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/vendors/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/linericon/style.css">
    <link rel="stylesheet" href="~/vendors/owl-carousel/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/vendors/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/vendors/nice-select/nice-select.css">
    <link rel="stylesheet" href="~/vendors/nouislider/nouislider.min.css">
    <script src="~/js/Validation.js" type="text/javascript"></script>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <!--================ Start Header Menu Area =================-->
    <header class="header_area">
        <div class="main_menu">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <a class="navbar-brand" href="@Url.Action("Index","Home")"><img class="w-50 h-50" src="~/img/newlogo.png" alt="Icon BookStore"></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                        <ul class="nav navbar-nav menu_nav ml-auto mr-auto">
                            <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item submenu dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                                   aria-expanded="false">Shop</a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">@Html.ActionLink("Product Category", "Category", "Shop", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li class="nav-item">@Html.ActionLink("Orders Information", "Confirmation", "Shop", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li class="nav-item">@Html.ActionLink("Shopping Cart", "Cart", "Shop", new { area = "" }, new { @class = "nav-link" })</li>
                                </ul>
                            </li>
                            <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
                        <ul class="nav-shop">
                            <li class="nav-item"><button type="button" style="margin-left:20px;" onclick="location.href = '@Url.Action("Cart","Shop")'"><i class="ti-shopping-cart"></i><span class="nav-shop__circle">@Session["OrderQuality"]</span></button> </li>
                            <li class="nav-item" style="margin-left: 10px; border-radius:50px;">@Html.ActionLink("Log out", "Logout", "Page", new { area = "" }, new { @class = "btn-danger p-3 pl-4 pr-4 rounded " })</li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!--================ End Header Menu Area =================-->
    <!-- ================ start banner area ================= -->
    <section class="blog-banner-area" id="category">
        <div class="container h-100">
            <div class="blog-banner">
                <div class="text-center">
                    <h1>Edit information</h1>
                    <nav aria-label="breadcrumb" class="banner-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item" aria-current="page">Home</li>
                            <li class="breadcrumb-item active" aria-current="page">Edit information</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- ================ end banner area ================= -->
    <!--================Login Box Area =================-->
    <section class="login_box_area section-margin">
        <div class="container" style="border-color:#384aeb">
            <div class="row">
                <div class="col-3">
                </div>
                <div class="col-lg-6">
                    <div class="login_form_inner ">
                        @{
                            <h3>Edit information</h3>
                            <form class="row login_form" action="@Url.Action("ChangeInformation", "Page")" method="post" id="register_form">
                                @Html.AntiForgeryToken()
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control" id="name" name="name" value="@Html.DisplayFor(Model => Model.customer_name)" placeholder="Full Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Full Name'" style="border-color: #cccccc" required>
                                </div>
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control" id="email" name="email" value="@Html.DisplayFor(Model => Model.customer_email)" placeholder="Email Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Example@Ex.xxx'" style="border-color: #cccccc" readonly>
                                </div>
                                <div class="col-md-12 form-group">
                                    <input type="text" class="form-control" id="address" name="address" value="@Html.DisplayFor(Model => Model.customer_address)" placeholder="Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Address'" style="border-color: #cccccc" required>
                                </div>
                                @{
                                            int tmpGender = 1;
                                            try
                                            {
                                                 tmpGender = Convert.ToInt32(Model.customer_gender);
                                            }
                                            catch (NullReferenceException ex)
                                            {
                                                System.Diagnostics.Debug.WriteLine(ex);
                                            }
                                            if (tmpGender == 1)
                                            {
                                        <div class="col-4 form-group" style="margin-left: 60px">
                                            <input type="radio" class="form-control" id="gender" name="gender" value="1" checked style="border-color: #cccccc" required>
                                            <label for="male">Male</label>
                                        </div>
                                        <div class="col-4 form-group" style="margin-left: 10px">
                                            <input type="radio" class="form-control" id="gender" name="gender" value="2" style="border-color: #cccccc" required>
                                            <label for="female">Female</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-4 form-group" style="margin-left: 60px">
                                            <input type="radio" class="form-control" id="gender" name="gender" value="1" style="border-color: #cccccc" required>
                                            <label for="male">Male</label>
                                        </div>
                                        <div class="col-4 form-group" style="margin-left: 10px">
                                            <input type="radio" class="form-control" id="gender" name="gender" value="2" checked style="border-color: #cccccc" required>
                                            <label for="female">Female</label>
                                        </div>
                                    }
                                }
                                <div class="col-md-12 form-group">
                                    @{string tmp = Model.customer_birthday.ToString("yyyy-MM-dd");}
                                    <input type="date" class="form-control" id="birthday" name="birthday" value="@Html.DisplayFor(Model => tmp)" placeholder="Date of Birth" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Date of Birth'" style="border-color: #cccccc" required>
                                </div>
                                <div class="col-md-12 form-group">
                                    <input type="tel" class="form-control" id="phone" name="phone" value="@Html.DisplayFor(Model => Model.customer_phone)" placeholder="Phone Number" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Phone Number'" maxlength="10" style="border-color: #cccccc" required pattern="(01|03|05|06|07|08|09)+([0-9]{8})\b" title="Phone number was incorrect format. e.g 09xxxxxx00">
                                </div>
                                <div class="col-md-12 form-group">
                                    <button type="submit" id="btnSumbitRegister" value="submit" class="button button-register w-100">Change</button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Login Box Area =================-->
    <!--================ Start footer Area  =================-->
