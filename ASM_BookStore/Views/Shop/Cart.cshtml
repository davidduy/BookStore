@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Aroma Shop - Cart</title>
    <link rel="icon" href="~/img/Fevicon.png" type="image/png">
    <link rel="stylesheet" href="~/vendors/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/vendors/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/vendors/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/linericon/style.css">
    <link rel="stylesheet" href="~/vendors/owl-carousel/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/vendors/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/vendors/nice-select/nice-select.css">
    <link rel="stylesheet" href="~/vendors/nouislider/nouislider.min.css">

    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <!--================ Start Header Menu Area =================-->
    <header class="header_area">
        <div class="main_menu">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <a class="navbar-brand" href="@Url.Action("Index","Home")"><img class="w-50 h-50" src="~/img/newlogo.png" alt="Icon BookStore"></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                        <ul class="nav navbar-nav menu_nav ml-auto mr-auto">
                            <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item active submenu dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                                   aria-expanded="false">Shop</a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">@Html.ActionLink("Product Category", "Category", "Shop", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li class="nav-item">@Html.ActionLink("Orders Information", "Confirmation", "Shop", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li class="nav-item">@Html.ActionLink("Shopping Cart", "Cart", "Shop", new { area = "" }, new { @class = "nav-link" })</li>
                                </ul>
                            </li>
                            <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>

                        <ul class="nav-shop">
                            @if (Session["User"] == null)
                            {
                                <li class="nav-item">@Html.ActionLink("Login", "Login", "Page", new { area = "" }, new { @class = "button button - header" })</li>
                            }
                            else
                            {
                                <
                                <li class="nav-item"><button type="button" style="margin-left:20px;" onclick="location.href = '@Url.Action("Cart","Shop")'"><i class="ti-shopping-cart"></i><span class="nav-shop__circle">@Session["OrderQuality"]</span></button> </li>
                                <li class="nav-item">@Html.ActionLink((Session["Customer"] as ASM_BookStore.Models.Customer).customer_name, "ChangeInformation", "Page", new { area = "" }, new { @class = "button button - header" })</li>
                                <li class="nav-item" style="margin-left: 10px; border-radius:50px;">@Html.ActionLink("Log out", "Logout", "Page", new { area = "" }, new { @class = "btn-danger p-3 pl-4 pr-4 rounded " })</li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!--================ End Header Menu Area =================-->
    <!-- ================ start banner area ================= -->
    <section class="blog-banner-area" id="category">
        <div class="container h-100">
            <div class="blog-banner">
                <div class="text-center">
                    <h1>Shopping Cart</h1>
                    <nav aria-label="breadcrumb" class="banner-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" })</li>
                            <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- ================ end banner area ================= -->
    <!--================Cart Area =================-->
    @if (ViewBag.LO != null && ViewBag.LOI != null)
    {
        double total = 0;
        <section class="cart_area">
            <div class="container">
                <div class="cart_inner">
                    <div class="table-responsive">
                        <form hidden action="@Url.Action("UpdateCart", "Shop")" method="POST" id="update-form">
                            <input type="hidden" id="update-quantity" name="quantity" value="" />
                            <input type="hidden" id="update-id" name="IdBook" value="" />
                        </form>
                        <form hidden action="@Url.Action("DeleteOrder", "Shop")" method="POST" id="delete-form">
                            <input type="hidden" id="delete-quantity" name="quantity" value="" />
                            <input type="hidden" id="delete-id" name="IdBook" value="" />
                        </form>
                        <form hidden action="@Url.Action("Buy", "Shop")" method="POST" id="buy-form">
                            <input type="hidden" id="buy-id" name="IdOrder" value="" />
                        </form>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ASM_BookStore.Models.Order lo in ViewBag.LO)
                                {
                                    int buy = lo.order_ID;
                                    foreach (ASM_BookStore.Models.OrderInfo loi in ViewBag.LOI)
                                    {
                                        foreach (ASM_BookStore.Models.Book book in ViewBag.Books)
                                        {
                                            if (loi.orderInfo_book == book.book_ID)
                                            {
                                                total += (book.book_price * loi.orderInfo_quantity);
                                                <tr>
                                                    <td>
                                                        <div class="media">
                                                            <div class="d-flex">
                                                                <img src="~/img/@book.book_image" alt="" class="w-50 h-50">
                                                            </div>
                                                            <div class="media-body">
                                                                <h6>@book.book_title</h6>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <h5>@book.book_price VND</h5>
                                                    </td>
                                                    <td>
                                                        <div class="product_count">
                                                            <input type="text" name="qty" id="sst-@book.book_ID" maxlength="@book.book_quantityInStorage" value="@loi.orderInfo_quantity" title="Quantity:" class="input-text qty">
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <input type="text" class="form-control" id="idBook-@book.book_ID" name="IdBook" hidden value="@book.book_ID">
                                                        <input type="button" value="Update Order" class="button" href="#" onclick="update(@book.book_ID)" />
                                                        <input type="button" value="Delete Order" class="button mt-2" href="#" onclick="delet(@book.book_ID)" />
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <h5>Total</h5>
                                    </td>
                                    <td>
                                        <h5>$@total</h5>
                                    </td>
                                </tr>
                                <tr class="out_button_area">
                                    <td class="d-none-l">
                                    </td>
                                    <td class="">
                                    </td>
                                    <td></td>
                                    <td>
                                        <div class="checkout_btn_inner d-flex align-items-center">
                                            @Html.ActionLink("Continue Shopping", "Category", "Shop", new { @area = "" }, new { @class = "gray_btn" })
                                            <input type="button" class="button ml-2" href="#" value="Buy Now" onclick="buy(@buy)" />
                                        </div>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    }

    <!--================End Cart Area =================-->
    <!--================ Start footer Area  =================-->
    <footer>
        <div class="footer-area footer-only">
            <div class="container">
                <div class="row section_gap">
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="single-footer-widget tp_widgets ">
                            <h4 class="footer_title large_title">Our Mission</h4>
                            <p>
                                So seed seed green that winged cattle in. Gathering thing made fly you're no
                                divided deep moved us lan Gathering thing us land years living.
                            </p>
                            <p>
                                So seed seed green that winged cattle in. Gathering thing made fly you're no divided deep moved
                            </p>
                        </div>
                    </div>
                    <div class="offset-lg-1 col-lg-2 col-md-6 col-sm-6">
                        <div class="single-footer-widget tp_widgets">
                            <h4 class="footer_title">Quick Links</h4>
                            <ul class="list">
                                <li><a href="#">Home</a></li>
                                <li><a href="#">Shop</a></li>
                                <li><a href="#">Blog</a></li>
                                <li><a href="#">Product</a></li>
                                <li><a href="#">Brand</a></li>
                                <li><a href="#">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-6 col-sm-6">
                        <div class="single-footer-widget instafeed">
                            <h4 class="footer_title">Gallery</h4>
                            <ul class="list instafeed d-flex flex-wrap">
                                <li><img src="img/gallery/r1.jpg" alt=""></li>
                                <li><img src="img/gallery/r2.jpg" alt=""></li>
                                <li><img src="img/gallery/r3.jpg" alt=""></li>
                                <li><img src="img/gallery/r5.jpg" alt=""></li>
                                <li><img src="img/gallery/r7.jpg" alt=""></li>
                                <li><img src="img/gallery/r8.jpg" alt=""></li>
                            </ul>
                        </div>
                    </div>
                    <div class="offset-lg-1 col-lg-3 col-md-6 col-sm-6">
                        <div class="single-footer-widget tp_widgets">
                            <h4 class="footer_title">Contact Us</h4>
                            <div class="ml-40">
                                <p class="sm-head">
                                    <span class="fa fa-location-arrow"></span>
                                    Head Office
